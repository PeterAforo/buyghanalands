# Buy Ghana Lands - Environment Variables Example
# Copy this file to .env and fill in your values

# Database (NeonDB)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# Auth.js
AUTH_SECRET="generate-a-secure-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Mapbox
MAPBOX_ACCESS_TOKEN="pk.your_mapbox_token_here"

# Paystack
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public"

# SMS (mNotify)
MNOTIFY_API_KEY="your_mnotify_api_key"

# Email
EMAIL_PROVIDER_API_KEY="your_email_provider_key"

# Storage (S3/R2)
S3_ENDPOINT="your_s3_endpoint"
S3_BUCKET="buyghanalands"
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"

# Sentry (optional)
SENTRY_DSN=""

# Firebase Cloud Messaging (optional)
FCM_SERVER_KEY=""
