enum UssdSessionStatus {
  ACTIVE
  COMPLETED
  EXPIRED
  CANCELLED
}

model UssdSession {
  id        String            @id @default(cuid())
  msisdn    String
  sessionId String            @unique
  status    UssdSessionStatus @default(ACTIVE)
  menuPath  String[]
  data      Json?
